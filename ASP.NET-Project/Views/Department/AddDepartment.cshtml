@model ASP.NET_Project.Models.department
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <script>
        function change()
        {
            var idbox = document.getElementById('ManagerID');
            var drop = document.getElementById('drop');
            idbox.value = drop.value;
        }
    </script>
</head>
<body>
    <div>
        <ul>
            <li>Hello  @Session["FullName"]</li>
            <li>@Html.ActionLink("Home", "Home", "Login")</li>
            <li>Number of Action: @Session["ActionCounter"] </li>
            <li>@Html.ActionLink("LogOut", "LogOut", "Login")</li>
        </ul>
    </div>


    <div>
        <div>
            <div>
                <h2>Add Depatment</h2>
                @using (Html.BeginForm("AddDep", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div>
                        <label>Depatment Name</label>
                        @Html.TextBoxFor(x => x.DepName, new { @class = "form-control", placeholder = "Enter Department Name" })

                    </div>
                    <div>
                        <label>Depatment Manager </label>
                        @Html.DropDownListFor(x => x.Manager, new SelectList(ViewBag.emp, "ID", "FullName"), new { @class = "form-control", placeholder = "Enter Depatment Manager ID", @onchange = "javascript:change()", @id = "drop" })
                    </div>
                    <div>
                        <label>Manager ID</label>
                        @Html.TextBoxFor(x => x.Manager, new { @class = "form-control", placeholder = "Select Manager", @id = "ManagerID", disabled = "disabled" })
                    </div>

                    <input type="submit" value="Add Department">
                }
            </div>
        </div>
    </div>



</body>
</html>